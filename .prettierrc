{
    "printWidth": 100,
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "all",
    "bracketSpacing": false,
    "overrides": [
        {
            "files": ".github/**/*.yml",
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": ["*.html", "legacy/**/*.js"],
            "options": {
                "tabWidth": 4
            }
        }
    ]
}
