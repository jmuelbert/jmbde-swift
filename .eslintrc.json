{
  "root": true,
  "extends": [
    "eslint:recommnded",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": ["./docs/tsconfig.json"]},
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/strict-boolean-expressions": [
      2,
      {
        "allowString": false,
        "allowNumber": false
      }
    ]
  },
  "ignorePatterns":  [
    "src/**/*.test.ts",
    "docs/**/*.test.ts"
  ]
}
